<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:javaee="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
  <javaee:display-name>Project Tracker</javaee:display-name>
  <javaee:env-entry>
    <javaee:env-entry-name>APP_NAME</javaee:env-entry-name>
    <javaee:env-entry-type>java.lang.String</javaee:env-entry-type>
    <javaee:env-entry-value>projecttracker</javaee:env-entry-value>
  </javaee:env-entry>
  <javaee:env-entry>
    <javaee:env-entry-name>APP_ROOT_DIR_NAME</javaee:env-entry-name>
    <javaee:env-entry-type>java.lang.String</javaee:env-entry-type>
    <javaee:env-entry-value>projecttracker</javaee:env-entry-value>
  </javaee:env-entry>
  <javaee:env-entry>
    <javaee:env-entry-name>authenticator</javaee:env-entry-name>
    <javaee:env-entry-type>java.lang.String</javaee:env-entry-type>
    <javaee:env-entry-value>com.security.ProjectTrackerAuthenticator</javaee:env-entry-value>
  </javaee:env-entry>
  <javaee:env-entry>
    <javaee:env-entry-name>DB_CONNECTION_FACTORY</javaee:env-entry-name>
    <javaee:env-entry-type>java.lang.String</javaee:env-entry-type>
    <javaee:env-entry-value>com.api.db.JndiDatabaseConnectionImpl</javaee:env-entry-value>
  </javaee:env-entry>
  <listener>
    <javaee:listener-class>
      com.util.SessionListener
    </javaee:listener-class>
  </listener>
  <servlet>
    <servlet-name>sysconfig</servlet-name>
    <servlet-class>com.controller.stateless.SystemConfigurator</servlet-class>
    <load-on-startup>5</load-on-startup>
  </servlet>
  <servlet>
    <servlet-name>reportProcessor</servlet-name>
    <servlet-class>com.controller.stateless.ReportingServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>unsecureRequestProcessor</servlet-name>
    <servlet-class>com.controller.stateless.JavaResponseController</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>clientSrvcController</servlet-name>
    <servlet-class>com.controller.stateless.HttpRemoteServicesController</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>dataStreamProcessor</servlet-name>
    <servlet-class>com.controller.stateless.XmlResponseController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>sysconfig</servlet-name>
    <url-pattern>/sysconfig</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>reportProcessor</servlet-name>
    <url-pattern>/reportProcessor/*</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>unsecureRequestProcessor</servlet-name>
    <url-pattern>/unsecureRequestProcessor/*</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>clientSrvcController</servlet-name>
    <url-pattern>/clientSrvcController/*</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>dataStreamProcessor</servlet-name>
    <url-pattern>/dataStreamProcessor/*</url-pattern>
  </servlet-mapping>
  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
    <welcome-file>index.html</welcome-file>
  </welcome-file-list>
</web-app>