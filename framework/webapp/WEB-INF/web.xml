<?xml version="1.0" encoding="UTF-8"?>
<web-app>
  <display-name>Contacts</display-name>
  <env-entry>  	
     <env-entry-name>APP_NAME</env-entry-name>  	
     <env-entry-value>contacts</env-entry-value>  	
     <env-entry-type>java.lang.String</env-entry-type>  
  </env-entry>        
  <listener>
    <listener-class>
      com.util.SessionListener
    </listener-class>
  </listener>
  <servlet>
    <servlet-name>sysconfig</servlet-name>
    <servlet-class>com.controller.stateless.SystemConfigurator</servlet-class>
    <load-on-startup>5</load-on-startup>
  </servlet>  
  <servlet>
	  <servlet-name>reportProcessor</servlet-name>
	  <servlet-class>com.controller.stateless.ReportingServlet</servlet-class>
  </servlet>
  <servlet>
	    <servlet-name>unsecureRequestProcessor</servlet-name>
	    <servlet-class>com.controller.stateless.UnsecureController</servlet-class>
  </servlet> 
  <servlet>
	    <servlet-name>clientSrvcController</servlet-name>
	    <servlet-class>com.controller.stateless.HttpRemoteServicesController</servlet-class>
  </servlet>        
  <servlet-mapping>
    <servlet-name>sysconfig</servlet-name>
    <url-pattern>/sysconfig</url-pattern>
  </servlet-mapping>  
  <servlet-mapping>
    <servlet-name>reportProcessor</servlet-name>
    <url-pattern>/reportProcessor/*</url-pattern>
  </servlet-mapping>  
  <servlet-mapping>
	    <servlet-name>unsecureRequestProcessor</servlet-name>
	    <url-pattern>/unsecureRequestProcessor/*</url-pattern>
  </servlet-mapping>    
  <servlet-mapping>
	    <servlet-name>clientSrvcController</servlet-name>
	    <url-pattern>/clientSrvcController/*</url-pattern>
  </servlet-mapping>     
	<resource-ref>
      <description>Personal and Business Contacts</description>
      <res-ref-name>jdbc/contacts</res-ref-name>
      <res-type>javax.sql.DataSource</res-type>
      <res-auth>Container</res-auth>
  </resource-ref>    
  <welcome-file-list>
		<welcome-file>index.jsp</welcome-file>
		<welcome-file>index.html</welcome-file>
  </welcome-file-list>
</web-app>
